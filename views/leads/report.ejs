<% if (typeof canConsultUsers === 'undefined') { canConsultUsers = false; } %>
<% if (typeof canDownloadPDF === 'undefined') { canDownloadPDF = false; } %>

<%- include('../includes/head.ejs') %>

<style>
    form {
        width: 80%;
        font-size: 30px;
    }
    form label, form select, form input {
        margin-bottom: 20px;
    }
    form select, form input[type="submit"] {
        height: 40px;
        padding: 5px 10px;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<main>
    <div class="container mx-auto px-4 py-8">
        <% if (canDownloadPDF) { %>
        <div class="flex">
            <h1 class="text-2xl font-bold mb-6">Gráficas Dinámicas</h1>
            <button class="bg-blue-500 text-white rounded-md right-20 absolute w-40 h-10" id="pdf" onclick="downloadPDF()">Generar PDF</button>
        </div>
        <% } %>
        <br>
        
        <!-- Formulario para seleccionar datos de la tabla leads -->
        <form action="/ruta-de-procesamiento" method="POST">
            <label for="leadSelection">Selecciona un lead:</label>
            <select name="leadSelection" id="leadSelection">
                <% leads.forEach(lead => { %>
                    <option value="<%= lead.id %>"><%= lead.company %></option>
                <% }); %>
            </select>
            <input type="submit" value="Mostrar Gráfica">
        </form>

        <!-- Formulario para seleccionar una columna de la tabla leads -->
        <form action="/ruta-de-procesamiento-columna" method="POST">
            <label for="leadColumnSelection">Selecciona una columna:</label>
            <select name="leadColumnSelection" id="leadColumnSelection">
                <% leadColumns.forEach(column => { %>
                    <option value="<%= column %>"><%= column %></option>
                <% }); %>
            </select>
            <input type="submit" value="Mostrar Gráfica">
        </form>

        <!-- Historial de archivos CSV cargados -->
        <h2>Historial de archivos CSV cargados</h2>
        <% if (typeof reports !== 'undefined' && reports.length > 0) { %>
            <ul>
                <% reports.forEach(report => { %>
                    <li>
                        <strong>Nombre:</strong> <%= report.nombre %>
                        <strong>Subido por:</strong> <%= report.leadTeam %>
                        <strong>Fecha:</strong> <%= report.fecha %>
                        <a href="/ruta-de-descarga/<%= report.id %>">Descargar</a>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No hay reportes disponibles.</p>
        <% } %>

        <!-- Gráficas -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Gráfica de Barras -->
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold mb-4">Gráfica de Barras</h2>
                <canvas id="barChart"></canvas>
                <script>
                    const ctxBar = document.getElementById('barChart').getContext('2d');
                    const myBarChart = new Chart(ctxBar, {
                        type: 'bar',
                        data: {
                            labels: <%- JSON.stringify(leads.map(lead => lead.value)) %>,
                            datasets: [{
                                label: '',
                                data: <%- JSON.stringify(leads.map(lead => lead.gain)) %>,
                                backgroundColor: 'rgba(75, 192, 192, 0.2)', 
                                borderColor: 'rgba(75, 192, 192, 1)',       
                                borderWidth: 1                              
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    title: {
                                        display: true,
                                        text: 'Gain'
                                    }
                                },
                                x: {
                                    title: {
                                        display: true,
                                        text: 'Value'
                                    }
                                }
                            }
                        }
                    });
                </script>
            </div>

            <!-- Gráfica de Pastel -->
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold mb-4">Gráfica de Pastel</h2>
                <canvas id="pieChart"></canvas>
                <script>
                    const ctxPie = document.getElementById('pieChart').getContext('2d');
                    const myPieChart = new Chart(ctxPie, {
                        type: 'pie',
                        data: {
                            labels: <%- JSON.stringify(leads.map(lead => lead.value)) %>,
                            datasets: [{
                                data: <%- JSON.stringify(leads.map(lead => lead.gain)) %>,
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                    'rgba(255, 206, 86, 0.2)',
                                    // ... puedes agregar más colores aquí
                                ],
                                borderColor: [
                                    'rgba(255, 99, 132, 1)',
                                    'rgba(54, 162, 235, 1)',
                                    'rgba(255, 206, 86, 1)',
                                    // ... puedes agregar más colores aquí
                                ],
                                borderWidth: 1
                            }]
                        }
                    });
                </script>
            </div>

            <!-- Gráfica de Barras Horizontales -->
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold mb-4">Gráfica de Barras Horizontal</h2>
                <canvas id="horizontalBarChart"></canvas>
                <script>
                    const ctxHorizontalBar = document.getElementById('horizontalBarChart').getContext('2d');
                    const myHorizontalBarChart = new Chart(ctxHorizontalBar, {
                        type: 'horizontalBar',
                        data: {
                            labels: <%- JSON.stringify(leads.map(lead => lead.value)) %>,
                            datasets: [{
                                label: '',
                                data: <%- JSON.stringify(leads.map(lead => lead.gain)) %>,
                                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                                borderColor: 'rgba(153, 102, 255, 1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                x: {
                                    beginAtZero: true,
                                    title: {
                                        display: true,
                                        text: 'Gain'
                                    }
                                },
                                y: {
                                    title: {
                                        display: true,
                                        text: 'Value'
                                    }
                                }
                            }
                        }
                    });
                </script>
            </div>

            <!-- Gráfica de Línea -->
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold mb-4">Gráfica de Línea</h2>
                <canvas id="lineChart"></canvas>
                <script>
                    const ctxLine = document.getElementById('lineChart').getContext('2d');
                    const myLineChart = new Chart(ctxLine, {
                        type: 'line',
                        data: {
                            labels: <%- JSON.stringify(leads.map(lead => lead.value)) %>,
                            datasets: [{
                                label: 'Leads',
                                data: <%- JSON.stringify(leads.map(lead => lead.gain)) %>,
                                borderColor: 'rgba(255, 159, 64, 1)',
                                fill: false
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    title: {
                                        display: true,
                                        text: 'Gain'
                                    }
                                },
                                x: {
                                    title: {
                                        display: true,
                                        text: 'Value'
                                    }
                                }
                            }
                        }
                    });
                </script>
            </div>
        </div>
    </div>
</main>

<%- include('../includes/foot.ejs') %>
