<%- include('../includes/head.ejs') %>

<div class="h-screen font-sans text-gray-900 bg-gray-300 border-box">
    <div class="flex justify-center w-full mx-auto sm:max-w-lg">
        <div class="flex flex-col items-center justify-center w-full h-auto my-20 bg-white sm:w-3/4 sm:rounded-lg sm:shadow-xl">
            <div class="mt-10 mb-10 text-center">
                <h2 class="text-2xl font-semibold mb-2">Carga tu archivo</h2>
                <p class="text-xs text-gray-500">Solo se acepta formato .csv</p>
            </div>
            <form action="/leads/upload" method="POST" enctype="multipart/form-data" class="relative w-4/5 h-32 max-w-xs mb-10 bg-white bg-gray-100 rounded-lg shadow-inner" >
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
                <input type="file" id="importCSV" name="importCSV" class="hidden" accept=".csv">
                <label for="importCSV" class="z-20 flex flex-col-reverse items-center justify-center w-full h-full cursor-pointer">
                    <p class="z-10 text-xs font-light text-center text-gray-500">Drag & Drop your files here</p>
                </label>
                <input type="submit" name="submit" class="bg-blue-500 text-white rounded-md px-2 py-1" value="Subir">              
                <div id="loading" class="absolute inset-0 flex items-center justify-center bg-opacity-50 bg-gray-400 hidden">
                    <i class="fas fa-spinner fa-spin text-4xl text-white"></i>
                </div>
            </form>    
        </div>
    </div>
</div>

<%- include('../includes/foot.ejs') %>